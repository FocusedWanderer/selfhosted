[Unit]
Description=Tika
After=docker.service
Requires=docker.service

[Service]
EnvironmentFile=/usr/local/lib/systemd/system/profile.env
TimeoutStartSec=0
Restart=always
RestartSec=10s
Type=notify
NotifyAccess=all
ExecStartPre=/usr/bin/docker pull analogj/lodestone:tika
ExecStart=/opt/systemd-docker \
  --cgroups name=systemd \
  run --rm --name %n \
  analogj/lodestone:tika
 
[Install]
WantedBy=multi-user.target
